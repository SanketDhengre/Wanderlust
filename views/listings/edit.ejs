<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-8 offset-2">
    <h1>Edit Listing</h1>
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input
          name="listing[title]"
          type="text"
          class="form-control"
          value="<%= listing.title %>"
          placeholder="e.g. Cozy Beachfront Cottage"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a title.</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea
          name="listing[description]"
          class="form-control"
          placeholder="Describe your property, amenities, and highlights"
          required
        >
<%= listing.description %></textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a description.</div>
      </div>

      <div class="mb-3">
        Original Listing Image: <br />
        <img src="<%= originalImageUrl %>" class="edit-original-img" alt="Original Listing Image"/>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input name="listing[image]" type="file" class="form-control" />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide an image URL.</div>
      </div>

      <div>
        <label for="category" class="form-label">Choose Category</label>
        <div class="category-choose"></div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="rooms"
              name="listing[category]" value="Rooms" <%= listing.category.includes('Rooms') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="rooms"
              >
                <i class="fa-solid fa-bed me-2"></i> Rooms
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="iconic-cities"
              name="listing[category]" value="Iconic-Cities" <%= listing.category.includes('Iconic-Cities') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="iconic-cities"
              >
                <i class="fa-solid fa-mountain-city me-2"></i> Iconic Cities
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="mountains"
              name="listing[category]" value="Mountains" <%= listing.category.includes('Mountains') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="mountains"
              >
                <i class="fa-solid fa-mountain-sun me-2"></i> Mountains
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="castles"
              name="listing[category]" value="Castles" <%= listing.category.includes('Castles') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="castles"
              >
                <i class="fa-brands fa-fort-awesome me-2"></i> Castles
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="boat"
              name="listing[category]" value="Boat" <%= listing.category.includes('Boat') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="boat"
              >
                <i class="fa-solid fa-sailboat me-2"></i> Boat
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="ski-in-out"
              name="listing[category]" value="Ski-in-out" <%= listing.category.includes('Ski-in-out') || listing.category.includes('Ski-in/out') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="ski-in-out"
              >
                <i class="fa-solid fa-person-snowboarding me-2"></i> Ski-in/out
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="apartment"
              name="listing[category]" value="Apartment" <%= listing.category.includes('Apartment') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="apartment"
              >
                <i class="fa-solid fa-building me-2"></i> Apartment
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="new"
              name="listing[category]" value="New" <%= listing.category.includes('New') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="new"
              >
                <i class="fa-solid fa-key me-2"></i> New
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="woodlands"
              name="listing[category]" value="Woodlands" <%= listing.category.includes('Woodlands') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="woodlands"
              >
                <i class="fa-solid fa-tree-city me-2"></i> Woodlands
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="lake"
              name="listing[category]" value="Lake" <%= listing.category.includes('Lake') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="lake"
              >
                <i class="fa-solid fa-water me-2"></i> Lake
              </label>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="amazing-pools"
              name="listing[category]" value="Amazing-Pools" <%= listing.category.includes('Amazing-Pools') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="amazing-pools"
              >
                <i class="fa-solid fa-person-swimming me-2"></i> Amazing Pools
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="cabins"
              name="listing[category]" value="Cabins" <%= listing.category.includes('Cabins') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="cabins"
              >
                <i class="fa-solid fa-house me-2"></i> Cabins
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="camping"
              name="listing[category]" value="Camping" <%= listing.category.includes('Camping') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="camping"
              >
                <i class="fa-solid fa-campground me-2"></i> Camping
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="farm"
              name="listing[category]" value="Farm" <%= listing.category.includes('Farm') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="farm"
              >
                <i class="fa-solid fa-cow me-2"></i> Farm
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="arctic"
              name="listing[category]" value="Arctic" <%= listing.category.includes('Arctic') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="arctic"
              >
                <i class="fa-solid fa-snowflake me-2"></i> Arctic
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="beach"
              name="listing[category]" value="Beach" <%= listing.category.includes('Beach') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="beach"
              >
                <i class="fa-solid fa-umbrella-beach me-2"></i> Beach
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="countryside"
              name="listing[category]" value="Countryside" <%= listing.category.includes('Countryside') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="countryside"
              >
                <i class="fa-solid fa-house-chimney-window me-2"></i>
                Countryside
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox"
              id="bed-and-breakfasts" name="listing[category]"
              value="Bed-and-Breakfasts" <%= listing.category.includes('Bed-and-Breakfasts') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="bed-and-breakfasts"
              >
                <i class="fa-solid fa-mug-hot me-2"></i> Bed & Breakfasts
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="campsite"
              name="listing[category]" value="Campsite" <%= listing.category.includes('Campsite') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="campsite"
              >
                <i class="fa-solid fa-tents me-2"></i> Campsite
              </label>
            </div>
            <div class="form-check mb-3">
              <input class="form-check-input" type="checkbox" id="historical-homes"
              name="listing[category]" value="Historical-Homes" <%= listing.category.includes('Historical-Homes') ? 'checked' : '' %>>
              <label
                class="form-check-label d-flex align-items-center"
                for="historical-homes"
              >
                <i class="fa-solid fa-landmark me-2"></i> Historical Homes
              </label>
            </div>
          </div>
        </div>
        <div class="invalid-feedback">Please choose at least one category.</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price:</label>
          <input
            name="listing[price]"
            type="number"
            class="form-control"
            value="<%= listing.price %>"
            placeholder="e.g. 1500"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a price.</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country:</label>
          <input
            name="listing[country]"
            type="text"
            class="form-control"
            value="<%= listing.country %>"
            placeholder="e.g. United States"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a country.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input
          name="listing[location]"
          type="text"
          class="form-control"
          value="<%= listing.location %>"
          placeholder="e.g. Malibu"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please provide a location.</div>
      </div>

      <button class="btn btn-dark edit-btn" type="submit">Edit</button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
