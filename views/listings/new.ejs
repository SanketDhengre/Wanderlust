<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-8 offset-2">
    <h1>Create New Listing</h1>
    <br />
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input
          name="listing[title]"
          type="text"
          class="form-control"
          placeholder="e.g. Cozy Beachfront Cottage"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please fill out this field</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea
          name="listing[description]"
          type="text"
          class="form-control"
          placeholder="Describe your property, amenities, and highlights"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please fill out this field</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label"> Upload Listing Image: </label>
        <input name="listing[image]" type="file" class="form-control" required/>
      </div>

      <div>
        <label for="category" class="form-label">Choose Category</label>
        <div class="category-choose"></div>
        <div class="row">
          <div class="col-md-6">
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="rooms"
                name="listing[category]"
                value="Rooms"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="rooms"
              >
                <i class="fa-solid fa-bed me-2"></i> Rooms
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="iconic-cities"
                name="listing[category]"
                value="Iconic-Cities"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="iconic-cities"
              >
                <i class="fa-solid fa-mountain-city me-2"></i> Iconic Cities
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="mountains"
                name="listing[category]"
                value="Mountains"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="mountains"
              >
                <i class="fa-solid fa-mountain-sun me-2"></i> Mountains
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="castles"
                name="listing[category]"
                value="Castles"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="castles"
              >
                <i class="fa-brands fa-fort-awesome me-2"></i> Castles
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="boat"
                name="listing[category]"
                value="Boat"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="boat"
              >
                <i class="fa-solid fa-sailboat me-2"></i> Boat
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="ski-in-out"
                name="listing[category]"
                value="Ski-in-out"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="ski-in-out"
              >
                <i class="fa-solid fa-person-snowboarding me-2"></i> Ski-in/out
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="apartment"
                name="listing[category]"
                value="Apartment"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="apartment"
              >
                <i class="fa-solid fa-building me-2"></i> Apartment
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="new"
                name="listing[category]"
                value="New"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="new"
              >
                <i class="fa-solid fa-key me-2"></i> New
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="woodlands"
                name="listing[category]"
                value="Woodlands"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="woodlands"
              >
                <i class="fa-solid fa-tree-city me-2"></i> Woodlands
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="lake"
                name="listing[category]"
                value="Lake"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="lake"
              >
                <i class="fa-solid fa-water me-2"></i> Lake
              </label>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="amazing-pools"
                name="listing[category]"
                value="Amazing-Pools"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="amazing-pools"
              >
                <i class="fa-solid fa-person-swimming me-2"></i> Amazing Pools
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="cabins"
                name="listing[category]"
                value="Cabins"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="cabins"
              >
                <i class="fa-solid fa-house me-2"></i> Cabins
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="camping"
                name="listing[category]"
                value="Camping"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="camping"
              >
                <i class="fa-solid fa-campground me-2"></i> Camping
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="farm"
                name="listing[category]"
                value="Farm"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="farm"
              >
                <i class="fa-solid fa-cow me-2"></i> Farm
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="arctic"
                name="listing[category]"
                value="Arctic"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="arctic"
              >
                <i class="fa-solid fa-snowflake me-2"></i> Arctic
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="beach"
                name="listing[category]"
                value="Beach"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="beach"
              >
                <i class="fa-solid fa-umbrella-beach me-2"></i> Beach
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="countryside"
                name="listing[category]"
                value="Countryside"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="countryside"
              >
                <i class="fa-solid fa-house-chimney-window me-2"></i>
                Countryside
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="bed-and-breakfasts"
                name="listing[category]"
                value="Bed-and-Breakfasts"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="bed-and-breakfasts"
              >
                <i class="fa-solid fa-mug-hot me-2"></i> Bed & Breakfasts
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="campsite"
                name="listing[category]"
                value="Campsite"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="campsite"
              >
                <i class="fa-solid fa-tents me-2"></i> Campsite
              </label>
            </div>
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="checkbox"
                id="historical-homes"
                name="listing[category]"
                value="Historical-Homes"
              />
              <label
                class="form-check-label d-flex align-items-center"
                for="historical-homes"
              >
                <i class="fa-solid fa-landmark me-2"></i> Historical Homes
              </label>
            </div>
          </div>
        </div>
        <div class="invalid-feedback">Please choose at least one category.</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price:</label>
          <input
            name="listing[price]"
            type="number"
            class="form-control"
            placeholder="e.g. 1500"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please fill out this field</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country:</label>
          <input
            name="listing[country]"
            type="text"
            class="form-control"
            placeholder="e.g. United States"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please fill out this field</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input
          name="listing[location]"
          type="text"
          class="form-control"
          placeholder="e.g. Malibu"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please fill out this field</div>
      </div>

      <button class="btn btn-dark add-btn" type="submit">Add</button>
    </form>
    <br />
    <br />
  </div>
</div>
